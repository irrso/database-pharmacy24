<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileTest" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#d9d9d9</item>
        <item name="colorPrimaryVariant">#d9d9d9</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/custom_textFont</item>
        <item name="android:buttonStyle">@style/custom_btnFont</item>
    </style>
    <style name="custom_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/custom_textFont</item>
        <item name="android:buttonStyle">@style/custom_btnFont</item>
        <!-- 배경 dim 설정 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 0.0 (투명) ~ 1.0 (검정색) 값을 가집니다 -->
        <item name="android:backgroundDimAmount">0.8</item>
    </style>
    <style name="custom_textFont" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font</item>
    </style>
    <style name="custom_btnFont" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/font</item>
    </style>
</resources>
